<% if can? :create, Person and params[:action] == "index" %>
<li>
	<%= link_to new_person_path do %>
	<%= (content_tag(:i, '', :class => 'icon-pencil')) %>
	New Beneficiary
	<% end %>
</li>
<% end %>
<% if params[:action] == "show" %>
    <% if can? :update, Person %>
	<li>
		<%= link_to edit_person_path(@person) do %>
		<%= (content_tag(:i, '', :class => 'icon-pencil')) %>
		Edit Beneficiary
		<% end %>
	</li>
    <% end %>
    <% if can? :create, Person %>
	<li>
		<%= link_to new_benefit_incident_path(@person.id) do %>
		<%= (content_tag(:i, '', :class => 'icon-pencil')) %>
		New Incident
		<% end %>
	</li>
    <% end %>
<% end %>
