<h1 class="text-center">Benefits</h1>
<div class="row">
<table id="benefitsIndexTable" class="table tablesorter">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @benefits.each do |benefit| %>
    <tr>
      <td><%= benefit.name %></td>
      <td><%= benefit.description %></td>
      <td><%= link_to (content_tag(:i, "", :class => "icon-file")), benefit %>
        <%= link_to (content_tag(:i, "", :class => "icon-edit")), edit_benefit_path(benefit) %>
        <%= link_to (content_tag(:i, "", :class => "icon-trash")), benefit, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="button-center">
  <%= link_to "New Benefit", new_benefit_path, :class => 'button'%>
</div>
