<h1>Roles</h1>
<div class="row">
    <table id="rolesIndexTable" class="table tablesorter">
        <thead>
            <tr>
                <th>Name</th>
                <td></td>
            </tr>
        </thead>

        <tbody>
            <% @roles.each do |role| %>
            <tr data-link="<% role_path(role) %>">
                <td><%= role.name %></td>
                <td style="width: 130px;">
                    <%= link_to (content_tag(:i, '', :class => 'icon-edit')), edit_role_path(role) %>
                    <%= link_to (content_tag(:i, '', :class => 'icon-trash')), role, method: :delete, data: { confirm: 'Are you sure you want to delte this role?' } %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>