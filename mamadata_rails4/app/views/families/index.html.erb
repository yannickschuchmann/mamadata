<h1 class="text-center">Family</h1>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Head of the Household</th>
			<th>Family Member</th>
		</tr>
	</thead>

	<tbody>
		<% @families.each_with_index do |family,key| %>
			<tr>
				<td><%= family.name %></td>
				<td><%= @heads[key].name %></td>
				<td><% family.people.each do |people| %>
					<%= people.name %> <br>
				<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<div class="row">
	<div class="small-12 column">
		<%= link_to "New Family", new_family_path, :class => 'button' %>
	</div>
</div>
