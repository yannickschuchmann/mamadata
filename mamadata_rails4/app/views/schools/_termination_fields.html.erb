<div class="medium-12 column">
	<div class="row">
		<div class="small-12 medium-4 column">
			<%= f.label :terminated_at %>
		</div>
		<div class="small-12 medium-8 column">
			<div class="row collapse">
				<div class="small-1 column">
					<span class="prefix">
						<i class="icon-calendar"></i>
					</span>
				</div>
				<div class="small-11 column">
					<%= f.text_field :terminated_at, class: 'datepicker', placeholder: 'leave empty for today' %>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="small-12 medium-4 column">
			<%= f.label :termination_reason %>
		</div>
		<div class="small-12 medium-8 column">
			<%= f.select :termination_reason, ["finished", "discontinued"] %>
		</div>
	</div>
	<div class="row">
		<div class="small-12 medium-4 column">
			<%= f.label :termination_remark %>
		</div>
		<div class="small-12 medium-8 column">
			<%= f.text_area :termination_remark, :id => "termination_remark", :style => "height: 120px;" %>
			<div style="margin-top: -15px; margin-bottom: 5px;" class="text-right">
				<span id="txtLeft">500</span><span> of 500 chars left</span>
			</div>
		</div>
	</div>
	<script type="text/javascript">
		var maxlengthTxt = 500;
		var txt = 0;
		$("#termination_remark").keyup(function (e) {
			txt = $(this).val();
			leftText = maxlengthTxt - txt.length;
			if (leftText <= 0) {
				$(this).val(txt.slice(0, maxlengthTxt));
			};
			$('#txtLeft').html(leftText);
		})
	</script>
</div>
