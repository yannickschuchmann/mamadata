<h5>Narrative Text</h5>

<p>
	<% if @person.narrative_text? %>
	<%= simple_format(@person.narrative_text, {}, wrapper_tag: "div") %>
	<% else %>
	none
	<% end%>
</p>
<% if can? :update, Person %>
	<%= link_to edit_person_path(@person)+"/#narText", :class => "button" do %>
		<%= (content_tag(:i, '', :class => ' icon-pencil')) %>
		Edit Narrative Text 
	<% end %>
<% end %>