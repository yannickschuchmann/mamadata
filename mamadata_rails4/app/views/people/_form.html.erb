<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :fathers_name %><br>
    <%= f.text_field :fathers_name %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select :gender, ["male", "female"] %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth %><br>
    <%= f.date_select :date_of_birth, :start_year => 1920 %>
  </div>
  <div class="field">
    <%= f.label :place_of_birth %><br>
    <%= f.text_field :place_of_birth %>
  </div>
  <div class="field">
    <%= f.label :native_place %><br>
    <%= f.text_field :native_place %>
  </div>
  <div class="field">
    <%= f.label :name_of_the_house %><br>
    <%= f.text_field :name_of_the_house %>
  </div>
  <div class="field">
    <%= f.label :number_of_the_house %><br>
    <%= f.number_field :number_of_the_house %>
  </div>
  <div class="field">
    <%= f.label :name_of_the_street %><br>
    <%= f.text_field :name_of_the_street %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :pin_code %><br>
    <%= f.number_field :pin_code %>
  </div>
  <div class="field">
    <%= f.label :religion %><br>
    <%= f.select :religion, ["Hindu", "Christian", "Muslim", "Other"]%>
    <!--
      Hier muss eine entsprechende Weiche rein, damit der nicht das leere Feld nimmt, deswegen ist es hier auskommentiert.
      In der Datenbank wird nÃ¤mlich das letzte Feld gespeichert
    -->
    <% f.text_field :religion %>
  </div>
  <div class="field">
    <%= f.label :caste %><br>
    <%= f.select :caste, ["Scheduled Caste", "Most Backward Class", "Backward Class", "Other"]%>
    <% f.text_field :caste %>
  </div>
  <div class="field">
    <%= f.label :education %><br>
    <%= f.select :education, ["Primary", "High", "Hr Secondary", "College", "Vocational"]%>
  </div>
  <div class="field">
    <%= f.label :marital_status %><br>
    <%= f.select :marital_status, ["none", "married", "widow/widower", "deserted", "divorced", "seperated"]%>
  </div>
  <div class="field">
    <%= f.label :health_condition %><br>
    <%= f.select :health_condition, ["normal", "disabled", "mentally retarded"]%>
  </div>
  <div class="field">
    <%= f.label :occupation %><br>
    <%= f.select :occupation, ["none", "student", "agricultural coolie", "small farmer", "industrial worker", "government employee", "other"]%>
    <% f.text_field :occupation %>
  </div>
  <div class="field">
    <%= f.label :income %><br>
    <%= f.number_field :income %>
  </div>
  <div class="field">
    <%= f.label :role_id %><br>
    <%= f.select :role_id, Role.all.map{|role| [role.name, role.id]}  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
