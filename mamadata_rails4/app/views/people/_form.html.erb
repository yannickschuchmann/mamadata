<%= form_for(@person) do |f| %>

<% if @person.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>
	<ul>
		<% @person.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="row">
	<div class="small-12 medium-6 column">
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :name %>
			</div>
			<div class="small-12 medium-8 column">
				<%= f.text_field :name, :placeholder => "Name" %>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 columns">
				<%= f.label "Profile Picture" %>
			</div>
			<div class="small-12 medium-8 columns">
				<%= f.file_field :avatar %>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :fathers_name %>
			</div>
			<div class="small-12 medium-8 column">
				<%= f.text_field :fathers_name, :placeholder => "Fathers name", :id => "AutoFName"%>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 columns">
				<%= f.label :gender %>
			</div>
			<div class="small-12 medium-8 columns">
				<%= f.select :gender, ["male", "female"] %>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 columns">
				<%= f.label :date_of_birth, :class => "inline"%>
			</div>
			<div class="small-12 medium-8 columns">
				<%= f.date_select :date_of_birth, {:order => [:day, :month, :year], :start_year => 1910}, :class => "small-4 column" %>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :place_of_birth %>
			</div>
			<div class="small-12 medium-8 column">
				<%= f.text_field :place_of_birth, :placeholder => "Place of Birth" %>
			</div>
		</div>
	</div>
	<div class="small-12 medium-6 column">
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :native_place %>
			</div>
			<div class="small-12 medium-8 column">
				<%= f.text_field :native_place, :placeholder => "Native Place" %>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :name_of_the_house %>
			</div>
			<div class="small-12 medium-8 column">
				<%= f.text_field :name_of_the_house, :placeholder => "Name of the house" %>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :name_of_the_street %>
			</div>
			<div class="small-12 medium-8 column">
				<%= f.text_field :name_of_the_street, :placeholder => "Name of the Street" %>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :city %>
			</div>
			<div class="small-12 medium-8 column">
				<%= f.text_field :city, :placeholder => "City/Village", :id => "city" %>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :zip_code %>
			</div>
			<div class="small-12 medium-8 column">
				<%= f.text_field :zip_code, :placeholder => "ZIP Code" %>
			</div>
		</div>
	</div>
</div>
<hr/>
<div class="row">
	<div class="small-12 medium-6 column">
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :religion %>
			</div>
			<div class="small-12 medium-8 column">
				<div class="row selectWithOtherField">
					<%= f.select_with_other_field("person", :religion, {:selectContainerClass => 'small-12 column', :textFieldContainerClass => 'small-12 column'}) %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :caste %>
			</div>
			<div class="small-12 medium-8 column">
				<div class="row selectWithOtherField">
					<%= f.select_with_other_field("person", :caste, {:selectContainerClass => 'small-12 column', :textFieldContainerClass => 'small-12 column'}) %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 columns">
				<%= f.label :education, :class => "inline"%>
			</div>
			<div class="small-12 medium-8 columns">
				<%= f.select :education, ["Primary", "High", "Hr Secondary", "College", "Vocational"]%>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 columns">
				<%= f.label :marital_status, :class => "inline"%>
			</div>
			<div class="small-12 medium-8 columns">
				<%= f.select :marital_status, ["none", "married", "widow/widower", "deserted", "divorced", "seperated"]%>
			</div>
		</div>
	</div>
	<div class="small-12 medium-6 column">
		<div class="row">
			<div class="small-12 medium-4 columns">
				<%= f.label :health_condition, :class => "inline"%>
			</div>
			<div class="small-12 medium-8 columns">
				<%= f.select :health_condition, ["normal", "disabled", "mentally retarded"]%>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 columns">
				<%= f.label :occupation, :class => "inline" %>
			</div>
			<div class="small-12 medium-8 columns">
				<div class="row selectWithOtherField">
					<%= f.select_with_other_field("person", :occupation, {:selectContainerClass => 'small-12 column', :textFieldContainerClass => 'small-12 column'}) %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :income %>
			</div>
			<div class="small-12 medium-8 column">
				<%= f.text_field :income, :placeholder => "Income per month in Rupee" %>
			</div>
		</div>
		<div class="row">
			<div class="small-12 medium-4 column">
				<%= f.label :role_id %>
			</div>
			<div class="small-12 medium-8 column">
				<%= f.select :role_id, Role.all.map{|role| [role.name, role.id]}, :placeholder => "Income per month in Rupee" %>
			</div>
		</div>
	</div>
</div>
<hr/>
<div class="row">
    <div class="small-12 medium-6 column">
        <h2 class="text-center">Beneficiary Questions</h2>
        <div class="row">
            <div class="small-12 medium-4 columns">
                <%= f.label :narrative_text, :class => "inline"%>
            </div>
            <div class="small-12 medium-8 column">
                <%= f.text_area :narrative_text, :cols => 40, :rows => 40 %>
            </div>
        </div>
        <div class="row">
            <div class="small-12 medium-4 columns">
                <%= f.label "Godfather", :class => "inline"%>
            </div>
            <div class="small-12 medium-8 column">
                <%= f.select :godfather_ids, Supporter.where(:godfather => true).map{|role| [role.name.to_s + " " + role.family_name.to_s, role.id]}, :include_blank => true %>
            </div>
        </div>
    </div>
    <div class="small-12 medium-6 column">
    <% if params[:action] == 'edit' %>
        <div class="text-center">
            <%= link_to 'Add/Remove Programs', add_to_program_path(@person), :class => 'button small' %>
        </div>
    <% else %>
        <%= render 'program_checkboxes' %>
    <% end %>
    </div>
</div>

<!-- TODO: AJAX ! -->
<div class="row button-center">
	<%= f.submit :class => 'button' %>
</div>
<% end %>
<%= @cities %>
<script type="text/javascript">
$(function() {
	var cities = <%= @AutoCities.to_json.html_safe  %>;
	var names  = <%= @AutoNames.to_json.html_safe %>
	$("#city").autocomplete({source: cities});
	$("#AutoFName").autocomplete({source: names});
	
})
</script>
