	<div class="row person-head">
		<div class="medium-2 column">
			<%= image_tag @person.avatar.url(:medium), :class => "person-picture" %>
		</div>
		<div class="medium-10 column">
			<h3><%= @person.name %></h3>
			<% former_file_number = @person.file_number.empty? ? " (no former file)" : " (Former File: "+ @person.file_number+ ")" %>
			<h5><b>File: <%= @person.id %> <%= former_file_number %></b></h5>
			<ul class="no-bullet">
				<% @person.programs.each do |p| %>
				    <%= link_to p.name, program_path(p), {class: 'label button'} %>
				<% end %>
			</ul>
            <div id="amount-to-date" class="button-bar">
                <ul id="year-to-date" class="button-group round">
                    <li><a href="" class="tiny button">Year to date</a></li>
                    <li><a href="" class="tiny button">
                        <%= number_to_indian_currency(@person.year_to_date).html_safe %>
                    </a></li>
                </ul>
                <ul id="month-to-date" class="button-group round hidden">
                    <li><a href="" class="tiny button">Month to date</a></li>
                    <li><a href="" class="tiny button">
                        <%= number_to_indian_currency(@person.month_to_date).html_safe %>
                    </a></li>
                </ul>
            </div>
		</div>
	</div>