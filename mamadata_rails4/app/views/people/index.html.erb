<div id="peopleIndex">
  <h1>People</h1>
  <table id="peopleTable" class="responsive">
    <thead>
      <tr>
        <th>Name</th>
        <th>Fathers name</th>
        <th>Gender</th>
        <th>Date of birth</th>
        <th>Place of birth</th>
        <th>City</th>
        <th>PIN code</th>
        <th>Role</th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
      <tr>
        <td><a href="/people/<%= person.id %>"><%= person.name %></a></td>
        <td><%= person.fathers_name %></td>
        <td><%= person.gender %></td>
        <td><%= person.date_of_birth %></td>
        <td><%= person.place_of_birth %></td>
        <td><%= person.city %></td>
        <td><%= person.pin_code %></td>
        <td>
          <% if !person.role_id.nil?
            b = Role.find (person.role_id) %>
           <%= b.name %>
          <% end %>
        </td>
        <% end %>
      </tbody>
    </table>
  <br>
  <div class="button-center">
    <%= link_to new_person_path, :class => 'button [tiny small large]' do %>
    <%= content_tag(:i, "", :class => "icon-pencil") %>
    New Person
    <% end %>
  </div>
</div>