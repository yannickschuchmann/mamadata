<h1>Listing Incidents</h1>
<div

  <% if is_admin? %>
    <div class="button-center">
    <%= link_to benefit_incidents_pending_path, :class => 'button [tiny small large]' do %>
    Show All Pending
    <% end %>
  </div>
  <div class="button-center">
    <%= link_to benefit_incidents_granted_path, :class => 'button [tiny small large]' do %>
    Show All Granted
    <% end %>
  </div>
  <% end %>
<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Program</th>
      <th>Benefit</th>
      <th>Amount</th>
      <th>Remark</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @benefit_incidents.each do |benefit_incident| %>
      <tr>
        <td><%= benefit_incident.person.name %></td>
        <td><%= benefit_incident.program.name %></td>
        <td><%= benefit_incident.benefit.name %></td>
        <td><%= benefit_incident.amount %></td>
        <td><%= benefit_incident.remark %></td>
        <td><%= benefit_incident.status == true ? 'Granted' : 'Pending' %></td>
        <td><%= link_to 'Show', benefit_incident %>
        <%= link_to 'Edit', edit_benefit_incident_path(benefit_incident) %>
        <%= link_to 'Delete', benefit_incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


